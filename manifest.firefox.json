{
  "manifest_version": 3,
  "name": "Restore YouTube Fullscreen Scroll",
  "version": "1.0.17",
  "description": "Restores scroll functionality to YouTube fullscreen mode by preventing the player from taking over.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{c7d46953-f6ac-4ae5-bd19-f3471ff4639b}"
    }
  },
  "icons": {
    "128": "scroll-bar.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Restore YouTube Scroll"
  }
}