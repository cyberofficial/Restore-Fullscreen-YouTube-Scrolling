{
  "manifest_version": 3,
  "name": "Restore YouTube Fullscreen Scroll",
  "version": "1.0.46",
  "description": "Restores scroll functionality to YouTube fullscreen mode by preventing the player from taking over.",
  "icons": {
    "128": "scroll-bar.png"
  },
  "permissions": [
    "activeTab",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Restore YouTube Scroll"
  }
}
